<%= form_for @task do |f| %>
  <%= f.hidden_field :column_id, value: @column_id %>
  <div class="form-field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <%= f.submit 'Create Task', class: "submit-btn" %>
<% end %>